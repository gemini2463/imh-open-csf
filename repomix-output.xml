function formatElapsedTime($seconds)
{
    $seconds = (int)$seconds;
    $days = floor($seconds / 86400);
    $hours = floor(($seconds % 86400) / 3600);
    $mins = floor(($seconds % 3600) / 60);

    $out = [];
    if ($days > 0) $out[] = "{$days}d";
    if ($hours > 0 || $days > 0) $out[] = "{$hours}h";
    $out[] = "{$mins}m";

    return implode(', ', $out);
}




